@font-face
  font-family "Arial Narrow" /* Имя шрифта */
  src url(fonts/arrialnarrow-bold.ttf) /* Путь к файлу со шрифтом */


collapseButtonColor = #c3c8ca


/** <mixin>  **/

borderNullification()
  padding 0
  margin 0

docSize()
  width 1024px

flexStyle(dir)
  display flex

  if dir == 'row'
    flex-direction row
  else if dir == 'revers-row'
    flex-direction row-reverse
  else if dir == 'col'
    flex-direction column
  else if dir == 'revers-col'
    flex-direction column-reverse

menuStyle()
  flexStyle('row')
  borderNullification()
  list-style none

centrify()
  margin 0 auto

/** </mixin>  **/

