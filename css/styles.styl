/** CONTENT **/
#menu
  margin-top -2px
  margin-bottom 0
  border 0
  background-color #1b9a72
  button.navbar-toggle
    background collapseButtonColor
    border 1px solid collapseButtonColor
    cursor pointer
  .navbar-collapse.collapse.in
    border-color collapseButtonColor
  a
    color white
    font-size 20px
    font-weight bold
  li.active
    border: 10px solid #e7e7e7;
    margin-top: 0;
    border-right: 0;
    border-left: 0;
    background: #e7e7e7;
    a
      color: black
@media (min-width: 768px)
  .navbar-collapse.collapse
    display flex !important
    justify-content center
    li
      border-right 1px solid #7ebb97
    li:last-child
      border-right 0
  .navbar-nav>li
    margin-top 10px
    padding-left 10px
    padding-right 10px
    &>a
      padding-top 5px
      padding-bottom 5px

